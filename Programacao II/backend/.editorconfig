# EditorConfig para projeto Node.js com TypeScript, Express e pg-promise

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.ts]
indent_size = 4
quote_type = single

[*.js]
indent_size = 4
quote_type = single

[*.json]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 4
